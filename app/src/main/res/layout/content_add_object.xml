<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".object.ui.AddObjectActivity"
    tools:showIn="@layout/activity_add_object">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edtTitle" />

    <EditText
        android:id="@+id/editTxtTitle"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edtDescription" />

    <EditText
        android:id="@+id/editTextDescription"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edtAddress" />

    <EditText
        android:id="@+id/editTxtAddress"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spCategory" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fotos" />

    <ImageView
        android:id="@+id/imgViewPhoto"
        android:src="@drawable/image_upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
