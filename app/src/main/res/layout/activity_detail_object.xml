<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.busperapp.object.ui.DetailObjectActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageObject"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/image_loading"
                        />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txtDate"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_time" />

                <customfont.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Apr 20, 2016"
                    android:textColor="@color/textinfo"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@mipmap/icon" />

                <customfont.MyTextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="CNN"
                    android:textColor="@color/textinfo"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="vertical">

                <customfont.MyTextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="REDEFINING MOBILITY OF MOTOROLA ?"
                    android:textColor="@color/titleblack"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <customfont.MyTextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:letterSpacing="0.025"
                    android:lineSpacingExtra="5dp"
                    android:text="Cellphones have changed a lot since then, but Motorola  innovative spirit is as strong as ever. It what keeps us developing products that transform our customers lives, making them easier, smoother and more enjoyable.Like our blazing fast Android powered smartphones, led by the acclaimed DROID by Motorola family of products."
                    android:textColor="@color/descriptionblack"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerButtons"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btnEditObject"
                    android:text="Editar"
                    android:onClick="editObject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnDeleteObject"
                    android:text="Eliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
